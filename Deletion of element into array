#include<stdio.h>
int main()
{
int a[100],n,i,pos;
printf("Enter the size of array:");
scanf("%d",&n);
printf("Enter the elements of the array:");
for(i=0;i<=n-1;i++)
scanf("%d",&a[i]);
for(i=0;i<=n-1;i++)
printf("%d",a[i]);

printf("Enter the position of the array:");
scanf("%d",&pos);
for(i=pos-1;i<=n-1;i++){
a[i]=a[i+1];
}
n=n-1;
for(i=0;i<=n-1;i++)
printf("%d",a[i]);
return 0;
}

OUTPUT:
Enter the size of array:3
Enter the elements of the array:1 2 3
123
Enter the position of the array:2
13

