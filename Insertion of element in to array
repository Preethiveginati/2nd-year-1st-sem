#include<stdio.h>
int main()
{
int a[100],i,n,pos,item;
printf("enter the array size:");
scanf("%d",&n);
printf("enter elements of array:");
for(i=0;i<n-1;i++)
scanf("%d",&a[i]);
for(i=0;i<=n-1;i++)
printf("%d",a[i]);
n=n+1;
printf("enter the pos:");
scanf("%d",&pos);
printf("enter the item:");
scanf("%d",&item);
for(i=n-1;i>=pos-1;i--){
a[i+1]=a[i];}
a[pos-1]=item;
for(i=0;i<=n-1;i++)
printf("%d",a[i]);
return 0;
}


OUTPUT:
enter the array size:3
enter elements of array:1 2 3
enter the pos:2
enter the item:5
1523
